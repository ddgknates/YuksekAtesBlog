<html>
<head>
    <title>Yüksek Ateş Blog</title>

    <partial name="_CssPartial"></partial>

    <style>
        label.required:after {
            content: "*\00a0";
            color: red;
            margin-left: 2px;
        }
    </style>

</head>

<body class="d-flex flex-column min-vh-100">

    <header class="p-3 text-bg-dark">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none fw-bold">
                    YÜKSEK ATEŞ YÖNETİM PANELİ
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0 ms-5">        
                    <li><a asp-area="Admin" asp-controller="Category" asp-action="Index" class="nav-link px-2 text-white">Kategoriler</a></li>
                    <li><a asp-area="Admin" asp-controller="Post" asp-action="Index" class="nav-link px-2 text-white">İçerikler</a></li>
                    <li><a asp-area="Admin" asp-controller="Account" asp-action="AccountUpdate" class="nav-link px-2 text-white">Şifre Güncelle</a></li>
                </ul>

                <div class="ms-3 text-white mt-1">
                    <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                </div>

            </div>
        </div>
    </header>


    @RenderBody()

    <footer class="py-5 bg-dark text-white text-center mt-3 mt-auto">
        Yüksek Ateş | 2022
    </footer>

    <partial name="_JsPartial"></partial>

    @await RenderSectionAsync("Scripts", required:false);
    @await RenderSectionAsync("Update" , required: false)

    <script>
        $(document).ready(function () {
            $('.summernote').summernote();
        });
    </script>

</body>
</html>
